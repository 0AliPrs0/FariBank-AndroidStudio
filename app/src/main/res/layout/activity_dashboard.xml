<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="ir.ac.kntu.DashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fari_logo"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#14C7DD"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="64dp"
            android:layout_height="68dp"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/logout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="46dp"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="Account number: "
            android:textColor="#9729AA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/account_number"
            android:textIsSelectable="true"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:gravity="left"
            android:textColor="#A38016"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Balance: "
            android:textColor="#276A9F"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/amount_money"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#0EA314"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/charge_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/charge_account" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="400dp">

        <ImageView
            android:id="@+id/contact"
            android:layout_width="78dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/contact"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/loan"
            android:layout_width="78dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/loan"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/fund"
            android:layout_width="78dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/fund"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/transfer"
            android:layout_width="78dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/transfer"/>

    </LinearLayout>


</LinearLayout>
